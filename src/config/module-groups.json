{
    "file": {
        "name": "File Management",
        "description": "Load and save images to your device.",
        "modules": {
            "new": {
                "name": "New Image",
                "description": "Create a new image with specified dimensions.",
                "action": {
                    "type": "ui",
                    "target": "file-new"
                }
            },
            "open": {
                "name": "Open Image",
                "description": "Open an image or project file in a new workspace.",
                "action": {
                    "type": "function",
                    "target": "file/open.openFromFileDialog"
                },
                "preload": true,
                "cancelable": true
            },
            "export": {
                "name": "Export Image",
                "description": "Save the image in a universal format that can be opened by other editors.",
                "action": {
                    "type": "ui",
                    "target": "file-export"
                }
            },
            "saveAs": {
                "name": "Save Image As",
                "description": "Saves the image in a project format that can be re-opened by OpenGraphica without losing any information.",
                "action": {
                    "type": "ui",
                    "target": "file-save-as"
                }
            },
            "insertPhoto": {
                "name": "Insert a Photo",
                "description": "Add a photo as a new layer in the currently opened image.",
                "action": {
                    "type": "function",
                    "target": "file/open.insertFromFileDialog"
                },
                "cancelable": true
            },
            "takePhoto": {
                "name": "Take a Photo",
                "description": "Take a photo from your camera and webcam and insert it into the image.",
                "action": {
                    "type": "ui",
                    "target": "file-take-photo"
                }
            },
            "quickSave": {
                "name": "Quick Save",
                "description": "Saves the current file to temporary storage.",
                "action": {
                    "type": "function",
                    "target": "file/save.saveImageToTemporaryStorage"
                }
            },
            "quickLoad": {
                "name": "Quick Load",
                "description": "Load the file saved by quick save.",
                "action": {
                    "type": "function",
                    "target": "file/open.openFromTemporaryStorage"
                }
            }
        }
    },
    "history": {
        "name": "Edit History",
        "description": "Operations that control moving through the image edit history.",
        "modules": {
            "redo": {
                "name": "History Redo",
                "description": "Redo the last undone action.",
                "action": {
                    "type": "function",
                    "target": "history/tracking.redo"
                }
            },
            "undo": {
                "name": "History Undo",
                "description": "Undo the last action.",
                "action": {
                    "type": "function",
                    "target": "history/tracking.undo"
                }
            }
        }
    },
    "image": {
        "name": "Image Canvas",
        "description": "Operations that affect the image canvas.",
        "modules": {
            "convertLayersToImageSequence": {
                "name": "Convert Layers to Image Sequence",
                "description": "Converts the selected layers to an image sequence layer (animation).",
                "action": {
                    "type": "ui",
                    "target": "image-convert-layers-to-image-sequence"
                }
            },
            "copyAll": {
                "name": "Copy All Layers",
                "description": "Copy all layers on the canvas as a PNG image to the clipboard.",
                "action": {
                    "type": "function",
                    "target": "image/copy.copyAllLayers"
                }
            }
        }
    },
    "tutorial": {
        "name": "Tutorials",
        "description": "Learn how to use OpenGraphica.",
        "modules": {
            "welcome": {
                "name": "Welcome",
                "description": "Start working on an image.",
                "action": {
                    "type": "ui",
                    "target": "tutorial-welcome"
                }
            }
        }
    },
    "tmp": {
        "name": "Temporary Modules",
        "description": "Modules that will only stick around during initial development.",
        "modules": {
            "notYetImplemented": {
                "name": "Not Yet Implemented",
                "description": "Show a warning.",
                "action": {
                    "type": "function",
                    "target": "tmp/not-yet-implemented.notYetImplemented"
                }
            }
        }
    }
}
