{
    "draw": {
        "name": "Draw",
        "description": "Brushes, pencils, pens, and vector art drawing tools.",
        "tools": {
            "brush": {
                "name": "Brush",
                "description": "Brushes that draw on raster layers.",
                "controller": "free-transform"
            }
        }
    },
    "image": {
        "name": "Image",
        "description": "General image resolution manipulation.",
        "tools": {
            "cropResize": {
                "name": "Crop and Resize",
                "description": "Crop, resize, change aspect ratio, or resample the image.",
                "controller": "crop-resize",
                "toolbar": {
                    "exclusive": true,
                    "position": "top",
                    "target": "crop-resize"
                },
                "overlays": [
                    "crop-resize"
                ]
            }
        }
    },
    "text": {
        "name": "Text",
        "description": "Tools for manipulating text layers.",
        "tools": {
            "text": {
                "name": "Text",
                "description": "Create and edit text layers.",
                "controller": "text",
                "overlays": [
                    "free-transform",
                    "text"
                ]
            }
        }
    },
    "selection": {
        "name": "Selection",
        "description": "Select areas of the active layer(s), any manipulations to the layer(s) only occur inside the selection.",
        "tools": {
            "rectangleSelect": {
                "name": "Rectangle Selection",
                "description": "Select in a rectangle/square shape.",
                "controller": "rectangle-selection",
                "toolbar": {
                    "position": "auto",
                    "target": "rectangle-selection"
                },
                "overlays": [
                    "selection"
                ]
            },
            "ellipseSelect": {
                "name": "Ellipse Selection",
                "description": "Select in a ellipse/circle shape.",
                "controller": "ellipse-selection"
            },
            "freeSelect": {
                "name": "Free Selection",
                "description": "Select in a rectangle/square shape.",
                "controller": "rectangle-selection"
            },
            "tonalAreaSelect": {
                "name": "Tonal Area Selection",
                "description": "Select a surrounding area based on similar tone/color values.",
                "controller": "tonal-area-selection"
            }
        }
    },
    "transform": {
        "name": "Transform",
        "description": "Tools for moving, rotating, scaling the layer.",
        "tools": {
            "freeTransform": {
                "name": "Free Transform",
                "description": "Move, rotate, or scale the selected layers.",
                "controller": "free-transform",
                "toolbar": {
                    "position": "auto",
                    "target": "free-transform"
                },
                "overlays": [
                    "free-transform"
                ]
            }
        }
    },
    "view": {
        "name": "View Display",
        "description": "Tools for controlling the viewport display of the canvas.",
        "tools": {
            "zoom": {
                "name": "Zoom",
                "description": "Zoom in and out the canvas to control how much of the image you can see.",
                "controller": "zoom",
                "toolbar": {
                    "position": "auto",
                    "target": "zoom"
                }
            }
        }
    }
}